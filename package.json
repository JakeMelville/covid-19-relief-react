  "main": "server.js",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^4.0.1",
    "connect-mongo": "4.4.1",
    "cookie-parser": "1.4.5",
    "debug": "4.3.1",
    "dotenv": "8.2.0",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
